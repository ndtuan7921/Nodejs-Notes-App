    </div>
    <div class="bottom">
        <form action="/note/{{idnote}}/?_method=PUT" method="POST">
            <input type="text" class="" id="title" name="title" value="{{title}}" required>
            <textarea class="" id="content" name="content" rows="12" required>{{content}}</textarea>
            <button type="submit" class="add note-btn">Update</button>
        </form>
    </div>
</div>