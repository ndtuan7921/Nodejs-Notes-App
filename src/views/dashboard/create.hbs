<div class="add-note">
    <div class="top">
        <h1 class="title">Create note</h1>
        {{#if message}}
        <p class="error">{{message}}</p>
        {{/if}}

    </div>
    <div class="bottom">
        <form action="/dashboard/create" method="POST">
            <input type="text" class="" id="title" name="title" placeholder="Title" required>
            <textarea id="text" name="text" placeholder="Take a note..." rows="12" required></textarea>
            <button type="submit" class="add note-btn">Add Note</button>
        </form>
    </div>
</div>